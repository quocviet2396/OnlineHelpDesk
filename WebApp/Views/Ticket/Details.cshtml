@model LibraryModels.Ticket
@{
    ViewData["Title"] = "Detail";
    int i = 1;
    Layout = ViewData["Layout"]?.ToString() ?? "_DefaultLayout";
}
<section class="body-wrapper" style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col col-lg-10">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <h3 class="breadcrumb-item active col-lg-10">Ticket Details</h3>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Title</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Title)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Description</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Description)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">CreateDate</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.CreateDate)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">ModifiedDate</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.ModifiedDate)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Attachment</p>
                            </div>
                            <div class="col-sm-9">
                                @if (!string.IsNullOrEmpty(Model.Attachment))
                                {
                                    <img src="~/images/attachment/@Model.Attachment" class="img-thumbnail" width="150" height="150" />
                                }
                            </div>
                        </div>
                        <hr>
                         <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">TicketStatus</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.TicketStatus.Name)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Facilities</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Category.Description)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Creator</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0"> @Html.DisplayFor(model => model.Creator.Email)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Supporter</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0"> @Html.DisplayFor(model => model.Supporter.Email)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-6">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                                <a class="btn btn-success" asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>