@model LibraryModels.Ticket
@{
    int i = 1;
    Layout = ViewData["Layout"]?.ToString() ?? "_DefaultLayout";
}
@{
    ViewData["Title"] = "Edit";
}





<div class="body-wrapper">
    <div class="">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Send Ticket</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit" asp-controller="Ticket" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group" @ViewBag.us>
                                <label asp-for="CreateDate" class="control-label"></label>
                                <input asp-for="CreateDate" class="form-control" />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                            <div class="form-group" @ViewBag.us>
                                <label asp-for="ModifiedDate" class="control-label"></label>
                                <input asp-for="ModifiedDate" class="form-control" name="dateTime" />
                                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Current Attachment:</label>
                                <img src="@Url.Content($"~/images/attachment/{Model.Attachment}")" class="img-thumbnail" width="100" height="100" />
                            </div>


                            <!-- Hộp tải lên tệp mới -->
                            <div class="form-group">
                                <label asp-for="Attachment" class="control-label"></label>
                                <input asp-for="Attachment" type="file" name="file" class="form-control" />
                                <span asp-validation-for="Attachment" class="text-danger"></span>
                            </div>


                            <div class="form-group" @ViewBag.us>
                                <label asp-for="TicketStatusId" class="control-label"></label>
                                @if (ViewBag.AuthService != null && !ViewBag.AuthService.IsAdmin())
                                {
                                    <input asp-for="TicketStatusId" class="form-control" disabled />
                                }
                                else
                                {
                                    <select asp-for="TicketStatusId" class="form-control" asp-items="ViewBag.TicketStatusId"></select>
                                }
                                <span asp-validation-for="TicketStatusId" class="text-danger"></span>
                            </div>



                            <div class="form-group">
                                <label class="control-label">Category</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group" @ViewBag.us @ViewBag.sp>
                                <label asp-for="CreatorId" class="control-label"></label>
                                <select asp-for="CreatorId" class="form-control" asp-items="ViewBag.CreatorId"></select>
                                <span asp-validation-for="CreatorId" class="text-danger"></span>
                            </div>
                            <div class="form-group" @ViewBag.us @ViewBag.sp>
                                <label asp-for="SupporterId" class="control-label"></label>
                                <select asp-for="SupporterId" class="form-control" asp-items="ViewBag.SupporterEmails"></select>

                                <span asp-validation-for="SupporterId" class="text-danger"></span>
                            </div>
                            <div class="form-group" @ViewBag.us>
                                <label asp-for="feedback" class="control-label"></label>
                                <textarea asp-for="feedback" class="form-control"></textarea>
                                <span asp-validation-for="feedback" class="text-danger"></span>
                            </div>
                            <div class="form-group" @ViewBag.us @ViewBag.sp>
                                <label asp-for="PriorityId" class="control-label"></label>
                                <select asp-for="PriorityId" class="form-control" asp-items="ViewBag.Pro"></select>

                                <span asp-validation-for="PriorityId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
