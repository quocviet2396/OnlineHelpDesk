@model LibraryModels.Ticket
@{
    Layout = "Frontend";
}
@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Send Ticket</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Create" asp-controller="Ticket">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreateDate" hidden class="control-label"></label>
                                <input asp-for="CreateDate" hidden class="form-control" />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ModifiedDate" hidden class="control-label"></label>
                                <input asp-for="ModifiedDate" hidden class="form-control" />
                                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Attachment" class="control-label"></label>
                                <input asp-for="Attachment" type="file" name="file" class="form-control" />
                                <span asp-validation-for="Attachment" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TicketStatusId" hidden class="control-label"></label>
                                <select asp-for="TicketStatusId" hidden class="form-control" asp-items="ViewBag.TicketStatusId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label"></label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreatorId" hidden class="control-label"></label>
                                <select asp-for="CreatorId" hidden class="form-control" asp-items="ViewBag.CreatorId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="SupporterId" hidden class="control-label"></label>
                                <select asp-for="SupporterId" hidden class="form-control" asp-items="ViewBag.SupporterId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="PriorityId" hidden class="control-label"></label>
                                <select asp-for="PriorityId" hidden class="form-control" asp-items="ViewBag.Pro"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Send" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
